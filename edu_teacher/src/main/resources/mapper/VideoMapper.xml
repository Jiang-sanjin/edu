<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.teacher.mapper.VideoMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.example.teacher.pojo.Video">
        <id column="id" property="id" />
        <result column="course_id" property="course_id" />
        <result column="chapter_id" property="chapter_id" />
        <result column="title" property="title" />
        <result column="sort" property="sort" />
        <result column="play_count" property="play_count" />
        <result column="is_free" property="is_free" />
        <result column="video_source_id" property="video_source_id" />
        <result column="duration" property="duration" />
        <result column="status" property="status" />
        <result column="size" property="size" />
        <result column="version" property="version" />
        <result column="gmt_create" property="gmt_create" />
        <result column="gmt_modified" property="gmt_modified" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, course_id, chapter_id, title, sort, play_count, is_free, video_source_id, duration, status, size, version, gmt_create, gmt_modified
    </sql>

</mapper>
